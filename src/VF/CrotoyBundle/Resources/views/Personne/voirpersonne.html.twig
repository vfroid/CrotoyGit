{# src/VF/CrotoyBundle/Resources/views/Personne/confirmationpersonne.html.twig #}

{% extends "VFCoreBundle::layoutPersonne.html.twig" %}

  {% block crotoy %} {% endblock %}
  {% block flash %}
		{% for message in app.session.flashbag.get('notice') %}
           <div class="alert alert-info">Message flash : {{ message }}</div>
        {% endfor %}
    {% endblock %}
 {% block confirmationPersonne %}
 
 
 <h2> Données se trouvant dans la base de données  </h2>
	<table>
      <tr>
        <th>Nom et prénom</th>
		<th> {{ locataire.prenom }} {{ locataire.nom }} </th>
      </tr>
      <tr>
        <th>Adresse</th>
		<th>{{ locataire.numero }} {{ locataire.rue }}</th>
      </tr>
        <th>Localité</th>
		<th>{{ locataire.cp }}~' '~{{ locataire.ville }}</th>
      </tr>
	  <tr>
	  <tr>
        <th>Date de naissance</th>
		<th>{{ locataire.datene | date("d.m.y") }}</th>
      </tr>
	  <tr>
        <th>Pays</th>
		<th>{{ locataire.pays }}</th>
      </tr>
	  <tr>
        <th>Téléphone n°1</th>
		<th>{{ locataire.tel1 }}</th>
      </tr>
	  <tr>
        <th>Téléphone n°2</th>
		<th>{{ locataire.tel2 }}</th>
      </tr>
	  <tr>
        <th>Courriel</th>
		<th>{{ locataire.courriel}}</th>
      </tr>
    </table>

	
	</br></br></br>
	
	
	  
	{# On met l'id de la personne dans la route de l'action du formulaire #}
    <form action="{{ path('vf_personne_edit', {'id': id }) }}" method="post">
      <input type="submit" value="Modifier" class="btn btn-danger" />
	</form>
	
	<div><a class="btn btn-info" href="{{ path('vf_crotoy_accueil') }}">Retour</a> </div>
   
 {% endblock %}
